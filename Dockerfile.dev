FROM ubuntu:latest

# Docker container usable to iterate/validate building of vmaf itself via pygradle

RUN apt-get update -yqq && apt-get install -yqq \
    # Add essentials, as we're using a rather minimal "ubuntu" base
    build-essential python-pip \

    # Prerequisites to compile libraries that vmaf uses
    pkg-config gfortran libhdf5-dev libfreetype6-dev \

    # For development
    ipython ipython-notebook less git vim \

    # Needed for pygradle only
    openjdk-8-jre-headless

WORKDIR /vmaf
CMD bash
